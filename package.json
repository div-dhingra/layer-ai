{
  "name": "layer",
  "version": "0.1.0",
  "private": true,
  "description": "Layer - Configure your AI stack without code",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "type-check": "turbo run type-check",
    "sync:models": "tsx scripts/sync-model-registry.ts",
    "validate:models": "tsx scripts/validate-models.ts",
    "cleanup:models": "tsx scripts/cleanup-invalid-models.ts"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@google/genai": "^1.30.0",
    "@mistralai/mistralai": "^1.11.0",
    "@types/node": "^20.10.0",
    "dotenv": "17.2.3",
    "openai": "^4.104.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "turbo": "^1.11.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.22.0"
}